{
  "name": "miau",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean --stream --parallel",
    "build": "lerna run build --stream --parallel",
    "lint": "eslint . -f codeframe",
    "pretest": "yarn typecheck && yarn lint",
    "test": "yarn test:unit",
    "test:unit": "mocha \"packages/**/test/**/*.spec.ts?(x)\"",
    "start": "yarn start:client",
    "start:client": "yarn workspace @miau/app start",
    "start:server": "yarn workspace @miau/server start",
    "typecheck": "tsc --noEmit",
    "prettify": "npx prettier \"./**/*.{js,ts,tsx}\" --write"
  },
  "devDependencies": {
    "@ts-tools/build": "^1.2.6",
    "@ts-tools/node": "^1.1.3",
    "@ts-tools/webpack-loader": "^1.1.4",
    "@types/chai": "^4.2.11",
    "@types/compression": "^1.7.0",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.7",
    "@types/inversify": "^2.0.33",
    "@types/mocha": "^8.0.0",
    "@types/mongoose": "^5.7.31",
    "@types/node": "12",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.6.0",
    "chai": "^4.2.0",
    "css-loader": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "lerna": "^3.22.1",
    "less": "^3.12.0",
    "less-loader": "^6.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^8.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "semantic-ui-less": "^2.4.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "~3.9.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "license": "MIT",
  "private": true
}
